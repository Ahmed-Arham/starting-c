when a is less then b

#include<stdio.h>
#include<conio.h>

int main(){
    int a,b;
    printf("enter the value of a and b");
    scanf("%d%d",&a,&b);
    if(a<b){
        printf("a is less than b");
    }
}

when a is greater then b

#include<stdio.h>
#include<conio.h>

int main(){
    int a,b;
    printf("enter the value of a and b");
    scanf("%d%d",&a,&b);
    if(a>b){
        printf("a is greater than b");
    }
}

when a is equal to b

#include<stdio.h>
#include<conio.h>

int main(){
    int a,b;
    printf("enter the value of a and b");
    scanf("%d%d",&a,&b);
    if(a==b){
        printf("a and b are equal");
    }
}

when a is twice of b

#include<stdio.h>
#include<conio.h>

int main(){
    int a,b;
    printf("enter the value of a and b");
    scanf("%d%d",&a,&b);
    if(a==2*b){
        printf("a is equal to 2b");
    }
}

when c is equal to a into b

#include<stdio.h>
#include<conio.h>

int main(){
    int a,b,c;
    printf("enter the value of a,b and c");
    scanf("%d%d%d",&a,&b,&c);
    if(c==a*b){
 printf("c is rqual to a into b");
    }
}










